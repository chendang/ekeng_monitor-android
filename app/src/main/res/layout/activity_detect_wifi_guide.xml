<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_edittext_normal">

    <LinearLayout
        android:id="@+id/fg_home_bar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/top_back_btn_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/xml_login_main_btn_back" />

        <TextView
            android:id="@+id/tv_detect_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_ls_wifi_blood_pressure_guide"
            android:textColor="@color/white"
            android:textSize="@dimen/app_main_title_size"
            android:gravity="center"
            android:layout_marginRight="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detectwifiintruimage"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom">

        <Button
            android:text="下一步"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/wifiNextBtn"
            android:background="@drawable/btn_blue"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>
