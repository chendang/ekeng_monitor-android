<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_opeate_bar_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_hight"
    android:layout_alignParentTop="true"
    android:background="@color/btn_pressed_gray_bg"
    android:onClick="true"
    android:orientation="horizontal"
    android:visibility="invisible">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/btn_top_gray_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/text_green"
        android:textSize="@dimen/app_comm_size" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/line_between_v" />

    <TextView
        android:id="@+id/select_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/btn_top_gray_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/text_green"
        android:textSize="@dimen/app_comm_size" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/line_between_v" />

    <TextView
        android:id="@+id/select_all"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/btn_top_gray_bg"
        android:gravity="center"
        android:text="@string/chooseAll"
        android:textColor="@color/text_green"
        android:textSize="@dimen/app_comm_size" />
</LinearLayout>