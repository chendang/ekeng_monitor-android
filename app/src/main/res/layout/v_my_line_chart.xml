<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@drawable/bg_gradient_detect" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tv_my_line_last_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/btn_my_line_padding"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_line_last_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ddddd"/>
            <TextView
                android:id="@+id/tv_my_line_last_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ddddd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_toLeftOf="@id/tv_my_line_last_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/btn_my_line_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_line_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="---"/>
            <TextView
                android:id="@+id/tv_my_line_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="ddddd"/>
        </LinearLayout>

    </RelativeLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="170dp" />
    <LinearLayout
        android:id="@+id/real_time_chart_linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        android:orientation="vertical"/>

</LinearLayout>