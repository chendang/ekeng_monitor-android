<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_edittext_normal"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fg_home_bar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/top_back_btn_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/xml_login_main_btn_back" />

        <TextView
            android:id="@+id/tv_detect_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_ls_wifi_blood_pressure"
            android:textColor="@color/white"
            android:textSize="@dimen/app_main_title_size"
            android:gravity="center_vertical|center"
            android:layout_marginRight="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:background="@drawable/image_lswifiset"
            android:adjustViewBounds="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/wifiName"
            android:layout_above="@+id/wifipassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_edittext_normal"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/wifipassword"
            android:hint="请输入WIFI密码"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_edittext_normal"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="bottom">

        <Button
            android:text="搜索设备"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/wifiConectBtn"
            android:layout_below="@+id/textView"
            android:background="@drawable/btn_blue"
            android:layout_margin="10dp"
            android:layout_gravity="bottom" />

    </LinearLayout>


</LinearLayout>