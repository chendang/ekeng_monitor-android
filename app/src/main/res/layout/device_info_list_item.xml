<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/xml_listview_item_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/device_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/device_list_item_margin"
        android:src="@mipmap/btn_xt_normal"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/device_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/device_meter_blood_glucose"/>
        <TextView
            android:id="@+id/device_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/device_list_item_margin"
            android:text="@string/device_meter_blood_glucose"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/device_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/device_list_item_margin"
        android:padding="@dimen/device_list_item_icon_padding"
        android:visibility="gone"
        android:src="@drawable/ic_device_minus"/>

</LinearLayout>